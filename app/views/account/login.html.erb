<%= stylesheet_link_tag "login_form" %>
<%= javascript_include_tag "login_form" %>
<%= call_hook :view_account_login_top %>
<div class="login-form">
<h1>Login Form</h1>
<%= form_tag(signin_path) do %>
<%= back_url_hidden_field_tag %>
<table>
<tr>
   
    <td align="left"><%= text_field_tag 'mail', params[:usermail],:placeholder=>"Enter email", :tabindex => '1' %></td>
</tr>
<tr>
   
    <td align="left"><%= password_field_tag 'password', nil,:placeholder=>"Enter password", :tabindex => '2' %></td>
</tr>
<% if Setting.openid? %>
<tr>
  <td align="right"><label for="openid_url"><%=l(:field_identity_url)%></label></td>
  <td align="left"><%= text_field_tag "openid_url", nil, :tabindex => '3' %></td>
</tr>
<% end %>
<tr>
    <td></td>
    <td align="left">
        <% if Setting.autologin? %>
        <label for="autologin"><%= check_box_tag 'autologin', 1, false, :tabindex => 4 %> <%= l(:label_stay_logged_in) %></label>
        <% end %>
    </td>
</tr>
<tr>
    <td align="left" >
        <% if Setting.lost_password? %>
            <%= link_to "LastPassword", lost_password_path %>
        <% end %>
   
   

        <input type="submit" name="login" value="<%=l(:button_login)%> &#187;" tabindex="5"/>
    </td>
</tr>
</table>
<% end %>
</div>
<%= call_hook :view_account_login_bottom %>

<% if params[:usermail].present? %>
<%= javascript_tag "$('#password').focus();" %>
<% else %>
<%= javascript_tag "$('#username').focus();" %>
<% end %>
