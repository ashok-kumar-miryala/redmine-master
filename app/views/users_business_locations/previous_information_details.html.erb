<% if @directories.blank? %>
<h1>No Direcotries.....avilable </h1>
<% else %>
<style type="text/css">
.color1{
background-color:#CCFFCC;
}
.color2{
background-color:#F0FFFF;
}
</style>


<div>
	<table width="100%" border="1" align="center">
		<tr bgcolor="#8FBC8F">
			<th><%= params[:user_id]  %> </th>
			<th><%= params[:logintime]  %> </th>
		</tr>
	</table>
</div>
<div>
<table width="100%" align="center">
	<tr bgcolor="#99CCFF">
		<th> </th>
		<th>Basic Listings Information</th>
		<th>Categories</th>			
		<th>Web Site</th>
		<th>Description</th>
		<th>Photos</th>
		<th>Special Offer</th>
       		<th>Status</th>
	</tr>
<% @i=0 %>
   <% @directories.each do |directory| %>
  <% if((@i%2)==0) 
		id="color1"
	else
		id="color2"
  end %>
  <tr class='<%= id %>'>
		<td><%= directory.business %> </td>
		<td><%= directory.business_lising_information %> </td> 
		<% if(directory.categories) %>
		<td><image src="/images/yelp_buttons/icon_tick.png"> </td>
		<% else %>
		<td><image src="/images/yelp_buttons/icon_close.png"> </td>
		<% end %>
		<% if(directory.web_site) %>
		<td><image src="/images/yelp_buttons/icon_tick.png"> </td>
		<% else %>
		<td><image src="/images/yelp_buttons/icon_close.png"> </td>
		<% end %>
		<% if(directory.description) %>
		<td><image src="/images/yelp_buttons/icon_tick.png"> </td>
		<% else %>
		<td><image src="/images/yelp_buttons/icon_close.png"> </td>
		<% end %>
		<% if(directory.photos) %>
		<td><image src="/images/yelp_buttons/icon_tick.png"> </td>
		<% else %>
		<td><image src="/images/yelp_buttons/icon_close.png"> </td>
		<% end %>
		<% if(directory.special_offer) %>
		<td><image src="/images/yelp_buttons/icon_tick.png"> </td>
		<% else %>
		<td><image src="/images/yelp_buttons/icon_close.png"> </td>
		<% end %>
		<% if(directory.status) %>
		<td><image src="/images/yelp_buttons/icon_tick.png"> </td>
		<% else %>
		<td><image src="/images/yelp_buttons/icon_close.png"> </td>
		<% end %>
</tr>
 <% end %>
</table>
</div>
<% end %>
